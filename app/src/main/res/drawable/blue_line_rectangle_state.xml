<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State (클릭 시) -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Black Rectangle (클릭 시) -->
            <item android:drawable="@android:color/transparent" />
            <item
                android:bottom="1dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#000000" /> <!-- 검은색 (#000000) -->
                    <solid android:color="#00000000" /> <!-- 투명한 배경 (투명) -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Default State (기본) -->
    <item>
        <layer-list>
            <!-- Blue Rectangle (기본) -->
            <item android:drawable="@android:color/transparent" />
            <item
                android:bottom="1dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/subSky" /> <!-- 파란색 (#0000FF) -->
                    <solid android:color="#00000000" /> <!-- 투명한 배경 (투명) -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
